FROM debian:bullseye-slim

WORKDIR /tmp

RUN apt update && apt install --no-install-recommends -y \
  tini \
  systemd-sysv \
  iputils-ping \
  iproute2 \
  udev

COPY ./agent /usr/bin/agent
RUN chmod +x /usr/bin/agent

COPY ./init /usr/bin/init
RUN chmod +x /usr/bin/init

ENTRYPOINT [ "tail", "-f", "/dev/null" ]